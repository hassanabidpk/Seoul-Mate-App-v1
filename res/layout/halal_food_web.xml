<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@android:color/black">
    
    <LinearLayout 
   android:layout_width="130dp"
   android:layout_height="match_parent"
   android:layout_marginTop="15dp"
   android:weightSum="1.0"
   android:id="@+id/container"
   android:orientation="vertical">
        <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:layout_weight="0.05"
    android:text="Go Back"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/backToHome"
    android:background="@drawable/halal_web_button"/>
         <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
        <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:layout_weight="0.18"
    android:text="@string/general_tips"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/generaltips"
    android:background="@drawable/halal_web_button"
    />
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
   <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:layout_weight="0.18"
    android:text="@string/halal_snacks"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/halal"
    android:background="@drawable/halal_web_button"/>
   <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
                  <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_weight="0.18"
    android:layout_margin="3dp"
    android:text="@string/haram_snacks"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/haram"
    android:background="@drawable/halal_web_button"/>
                  <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
                       <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:layout_weight="0.18"
    android:text="@string/restaurants"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/restaurants"
    android:background="@drawable/halal_web_button"/>
    <View android:layout_width="match_parent"
          android:layout_height="2dp"
           android:background="@android:color/white"/>
   <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_weight="0.18"
    android:layout_margin="3dp"
        android:text="@string/korean_food"
    android:textSize="16dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/koreanfood"
    android:background="@drawable/halal_web_button"/>
   <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"/>
        <Button 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="3dp"
    android:layout_weight="0.05"
    android:text="@string/acknowledgement"
    android:textSize="14dp"
    android:textStyle="bold"
    android:textColor="@android:color/white"
    android:id="@+id/acknow"
    android:background="@drawable/halal_web_button"/>
        
        
    </LinearLayout>
        <View android:layout_width="2dp"
        android:id="@+id/separatorNor"
        android:layout_toRightOf="@id/container"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
    
    <ProgressBar
       android:id="@+id/progressBar"
       android:layout_marginTop="10dp"
       android:layout_width="fill_parent"
       style="@style/CustomProgressBarHorizontal"
       android:progressDrawable="@drawable/customprogressbar"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/separatorNor"
       />
    
    <WebView android:id="@+id/halalweb"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:layout_below="@id/progressBar"
        android:layout_toRightOf="@id/separatorNor"
        />

</RelativeLayout>
